{
  "name": "typescript-react-flux-utils",
  "version": "1.0.0",
  "description": "TypeScript + React + Flux-Utils",
  "main": "index.js",
  "scripts": {
    "prebuild": "npm run cp:html",
    "cp:html": "cpx src/**/*.html dist",
    "lint:ts": "tslint src/**/**/*.ts{,x} test/**/**/*.ts{,x}; exit 0",
    "build:ts": "tsc",
    "build:watch": "tsc -w",
    "build:tsify": "watchify src/app.ts -p tsify -o dist/bundle.js -v -d",
    "build:browserify": "browserify ./build/app.js -o ./dist/bundle.js -v -d",
    "build:watchify": "watchify ./build/app.js -o ./dist/bundle.js -v -d",
    "build:webpack": "webpack --progress --colors",
    "serve:webpack": "webpack-dev-server --content-base dist/ --progress --color",
    "start": "concurrently --kill-others \"npm run build:watchify\" \"npm run build:watch\" "
  },
  "author": "Shinya Ohyanagi",
  "private": true,
  "license": "MIT",
  "devDependencies": {
    "@types/enzyme": "^2.4.36",
    "@types/es6-promise": "0.0.32",
    "@types/flux": "0.0.31",
    "@types/mocha": "^2.2.32",
    "@types/node": "^6.0.43",
    "@types/power-assert": "^1.4.29",
    "@types/react": "^0.14.41",
    "@types/react-dom": "^0.14.17",
    "awesome-typescript-loader": "^2.2.4",
    "browserify": "^13.1.0",
    "concurrently": "^3.1.0",
    "cpx": "^1.5.0",
    "enzyme": "^2.4.1",
    "file-loader": "^0.9.0",
    "mocha": "^3.1.0",
    "npm-parallel": "^2.0.1",
    "power-assert": "^1.4.1",
    "react-addons-test-utils": "^15.3.2",
    "tsify": "^1.0.8",
    "tslint-config-standard": "^1.5.0",
    "typescript": "^2.0.3",
    "watchify": "^3.7.0",
    "webpack": "^1.13.2",
    "webpack-dev-server": "^1.16.2"
  },
  "dependencies": {
    "es6-promise": "^4.0.5",
    "flux": "^3.0.0",
    "react": "^15.3.2",
    "react-dom": "^15.3.2"
  }
}
