{
  "buildOnSave": false,
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es6",
    "allowJs": false,
    "declaration": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "build",
    "typeRoots": [
      "./typings/**/*"
    ]
  },
  "exclude": [
    "node_modules"
  ]
}
